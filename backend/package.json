{
    "name": "backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "wrangler dev src/index.ts",
        "deploy": "wrangler deploy --minify src/index.ts",
        "build:pages": "esbuild src/index.ts --bundle --format=esm --platform=browser --outfile=../frontend/dist/_worker.js --external:drizzle-orm --external:lunar-javascript",
        "cf-typegen": "wrangler types --env-interface CloudflareBindings"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.6",
        "better-sqlite3": "^9.4.3",
        "drizzle-orm": "^0.36.1",
        "hono": "^4.6.10",
        "lunar-javascript": "^1.6.13"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241112.0",
        "@types/node": "^20.11.17",
        "drizzle-kit": "^0.28.1",
        "esbuild": "^0.20.1",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3",
        "wrangler": "^3.87.0"
    }
}